L = []
op = [1,2,3,4]

def qu1():
    #question1
    print("Question 1:")
    print(" <ques> ")
    print("Option 1: Very Frequently")
    print("Option 2: Frequently")
    print("Option 3: Rarely")
    print("Option 4: Never")
    a = int(input("Enter your option (1/2/3/4):"))
    if a not in op:
        print("Please select from the options provided")
        qu1()
    L.append(a)
qu1()
