def counter():
    totalpoints = 0
    points1 = 0
    points2 = 0
    points3 = 0
    points4 = 0
    for i in L:
        if i == 1:
            points1 += 10
            totalpoints += 10
        elif i == 2:
            points2 += 10
            totalpoints +=10
        elif i == 3:
            points3 += 10
            totalpoints += 10
        elif i == 4:
            points4 += 10
            totalpoints += 10
    return [points1, points2, points3, points4, totalpoints]

